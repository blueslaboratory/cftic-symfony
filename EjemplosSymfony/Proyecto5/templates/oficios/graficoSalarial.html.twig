<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gr√°fico Salarial</title>
    <style>
        .barrita{
            background-color: greenyellow;
        }
        td{
            width: 100px;
        }
    </style>
</head>

<body>
    <h2>OFICIO</h2>
    <form name="salario" method="post" action="{{ path('buscarOficios1') }}">
        <select name="selectOficio" id="">
            {% for oficio in arrayEmpleados %}
                <option value="{{ oficio.oficio }}">{{ oficio.oficio }}</option>
            {% endfor %}
        </select>

        <input type="submit" value="BUSCAR">
    </form>

    
    <h2>GRAFICO SALARIAL</h2>
    {% if datosOficio is defined %}
        {% for emple in datosOficio %}
        {% set longitud =  emple.salario /1000 %}
            <table class="table">
                <thead>
                    <tr>
                        <th>OFICIO</th>
                        <th>APELLIDO</th>
                        <th>SALARIO</th>
                    </tr>
                </thead>

                <tbody>
                    <tr>
                        <td>{{ emple.oficio|upper }}</td>
                        <td>{{ emple.apellido|upper }}</td>
                        <td class="barrita" style="width: {{ longitud }}px;">{{ emple.salario }}</td>
                    </tr>
                </tbody>
            </table>
        {% endfor %}
    {% endif %}
    
</body>

</html>