<body>
    <script src="/jquery-3.2.1.min.js" type="text/javascript"></script>

    <h3>Le sugerimos lo siguiente:</h3>
    <ol class="round">
        <li class="one">
            <h5>Vista parcial de Personas</h5>
            <button type="button" id="btnpersonas">Vista de personas</button>
            <div id="detallepersonas" style="display: none"></div>
            {# id se usa en JS #}
        </li>

        <li class="two">
            <h5>Vista parcial de Lenguajes</h5>
            <button type="button" id="btnlenguajes">Vista de lenguajes</button>
            <div id="detallelenguajes" style="display: none"></div>
        </li>
    </ol>

    <script>
        $(document).ready(function () {
            // cuando pique en el boton con id #btnpersonas, haz que la llamada que voy a hacer con AJAX se cargue en el id #detallepersonas
            // El efecto .toggle() solo te permite alternar entre dos acciones: mostrar u ocultar
            $("#btnpersonas").click(function () {
                $("#detallepersonas").toggle("fast");
                $("#detallepersonas").load("{{ path('RecuperarPersonas')}}");
            });
            $("#btnlenguajes").click(function () {
                $("#detallelenguajes").toggle("slow");
                $("#detallelenguajes").load("{{ path('RecuperarLenguajes')}}");
            });
        });
    </script>

</body>

</html>


