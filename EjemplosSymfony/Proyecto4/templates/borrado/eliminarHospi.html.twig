{% extends 'borrado/baseEliminar.html.twig' %}

{% block title %}Eliminar Hospital{% endblock %}
{% block body %}
<h1>Eliminar Hospital</h1>

<form method="POST" action="{{ path('eliminarHospi') }}">

    <div>
        <label class="form-label">
            Introduzca el id del hospital
        </label>
        <input type="text" name="txtId" class="form-control" id="txtId">
    </div>

    <button type="submit" class="btn btn-primary">
        Eliminar hospital
    </button>
</form>
{% endblock %}