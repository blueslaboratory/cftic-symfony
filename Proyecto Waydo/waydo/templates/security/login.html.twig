{% extends 'base.html.twig' %}

{% block title %}¡Iniciar sesión!{% endblock %}


{% block stylesheets %}
    <style>
        *{
            /* border: 2px solid blue;  */
        }

        body{
            margin: 0 40%;
        }

        form{
            margin-top: 50%;
            /* border: 2px solid orange;  */
        }

        .loginBox{
            /* border: 1px solid red; */
            /* text-align: center; */
        }

        label{
            display: inline-block;
            width: 80px;
            text-align: left;
        }

        button{
            padding: 1% 20%;
        }
    </style>
{% endblock %}


{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Has iniciado sesión como <strong>{{ app.user.userIdentifier }}</strong>, <a href="{{ path('app_logout') }}">logout</a>
        </div>
    {% endif %}

    <div class="loginBox">
        <h1 class="h3 mb-3 font-weight-normal">Iniciar Sesión</h1>

        <label for="inputNick">nick</label>
        <input type="text" value="{{ last_username }}" name="nick" id="inputNick" class="form-control" autocomplete="username" required autofocus>
        <br>
        <label for="inputPassword">contraseña</label>
        <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
        <br><br>
        <input type="hidden" name="_csrf_token"
            value="{{ csrf_token('authenticate') }}"
        >

        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
        #}

        <button class="btn btn-lg btn-primary" type="submit">
            Iniciar sesión
        </button>

    </div>
    
</form>
{% endblock %}